<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colourWhiteBackground"
    tools:context="com.siementory.siementory.IssueHistoryDisplayActivity">


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/issueListView"
        android:layout_below="@id/tvIssueHistory"
        android:layout_marginTop="10dp"
        android:scrollbarSize="10dp"
        android:padding="10dp">

    </ListView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISSUE HISTORY"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/colorSiemensDark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        android:id="@+id/tvIssueHistory"

        />

</RelativeLayout>
