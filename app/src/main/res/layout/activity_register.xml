<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colourWhiteBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.siementory.siementory.RegisterActivity">


    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Issue History"
        android:background="@drawable/bt_curved"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etIssueStockByName"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="55dp"
        android:id="@+id/btIssueHistoryButton"
        android:textColor="@color/colourWhiteBackground"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Search By Name"
        android:id="@+id/etIssueStockByName"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search stock to be issued"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="46dp"
        android:layout_toRightOf="@id/etIssueStockByName"
        android:layout_marginTop="150dp"
        android:background="@drawable/search"
        android:id="@+id/ivIssueStockSearch"/><![CDATA[

    />






]]>
</RelativeLayout>
