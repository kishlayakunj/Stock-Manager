<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colourWhiteBackground"
    tools:context="com.siementory.siementory.ScarceStockActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Scarce Stocks"
        android:layout_marginTop="20dp"
        android:id="@+id/tvScarceStock"
        android:textColor="@color/colorSiemensDark"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvScarceStock"
        android:id="@+id/ScarceStockListView"
        android:layout_marginTop="10dp"
        android:padding="10dp">

    </ListView>

</RelativeLayout>
