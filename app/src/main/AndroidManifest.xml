<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.siementory.siementory">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/siementory"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".ChooseProjectActivity" />
        <activity android:name=".NewProjectDetailsActivity" />
        <activity android:name=".ProjectActivity" />
        <activity android:name=".DisplayProjectNamesActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".RegisterActivity" />
        <activity android:name=".AddStockActivity" />
        <activity android:name=".ViewStockActivity" />
        <activity android:name=".DisplayAllStockActivity" />
        <activity android:name=".ViewSpecificStockActivity" />
        <activity android:name=".ViewStockFromListViewActivity" />
        <activity android:name=".IssueNewStockActivity" />
        <activity android:name=".UpdateStockActivity" />
        <activity android:name=".IssueHistoryDisplayActivity" />
        <activity android:name=".SearchStockListViewActivity" />
        <activity android:name=".SpecificStockIssueListActivity" />
        <activity android:name=".ScarceStockActivity"></activity>
    </application>

</manifest>